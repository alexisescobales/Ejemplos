<h3>Ejemplo de window.alert();</h3>

<script>
var edad = prompt("Escribe tu edad",'');
if(edad <= 17){
alert("No eres mayor de edad");
}else if (edad >= 18){
alert("Eres mayor de edad");
}else{
alert("Introduce un numero correcto");
}
</script>
